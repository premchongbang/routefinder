    <script type="text/javascript">
      var socket = io.connect();
      
      socket.on('renderMap', function(data){
        if(data.length > 0) {
          make_map(document.getElementById("map"), document.getElementsByClassName("hidden_first_loc"), data);
        } else {
          var data2 = [{name:"NOACTION", data:[], dest:{}}];
          make_map(document.getElementById("map"), document.getElementsByClassName("hidden_first_loc"), data2);
        }
      });

      function toggle(){
        var x = document.getElementsByClassName('btnDisable');

        if(document.getElementById("btnDisable").value == "OFF") {
          for(i = 0; i < x.length; i++) {
            x[i].value = "ON";
          }
        } else if(document.getElementById("btnDisable").value == "ON") {
          for(i = 0; i < x.length; i++) {
            x[i].value = "OFF";
          }
        }
      }
    </script>

